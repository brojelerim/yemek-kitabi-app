    {
      "action": "./index.html",
      "accept": {
        "text/html": [".html", ".htm"]
      }
    }
  ],
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+yemekkitabi",
      "url": "./index.html?url=%s"
