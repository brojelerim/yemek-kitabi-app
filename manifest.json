    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "Yeni Tarif Ekle",
      "short_name": "Ekle",
      "description": "Yeni bir tarif ekle",
      "url": "./index.html?action=add",
      "icons": [
        {
          "src": "./icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
